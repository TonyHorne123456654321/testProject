<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:background="@drawable/step_tip"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:id="@+id/number_3"
            android:text="3"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/outside_step_third_tv"
                android:layout_toRightOf="@id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:layout_marginTop="@dimen/padding_20dp"
                android:text="@string/outside_step_third"
                />

            <TextView
                android:id="@+id/outside_step_third_content_tv"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/number_3"
                android:layout_below="@id/outside_step_third_tv"
                android:paddingTop="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding_15dp"
                android:layout_height="wrap_content"
                android:text="@string/outside_step_third_content"
                />



    <Button
        android:id="@+id/outside_step_third_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/outside_step_third_content_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn"
        android:text="@string/outside_step_third_click"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/padding_20dp"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_below="@id/outside_step_third_bt"
        android:scaleType="fitXY"
        android:src="@drawable/item03"/>
</RelativeLayout>