<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_phone"
                android:layout_width="wrap_content"
                android:textSize="@dimen/little_16"
                android:textColor="@color/phone_number_color"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/contact_address"
                android:layout_width="wrap_content"
                android:textSize="@dimen/little_14"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/send_message"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_toLeftOf="@+id/cell_phone"
            android:layout_marginRight="@dimen/padding_20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/send_message"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/cell_phone"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/cell_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_20dp"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <View
       style="@style/horizontal_line_view"/>

</LinearLayout>