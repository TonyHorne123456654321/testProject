<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_no_net"/>

    <ScrollView
        android:id="@+id/detailScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_back"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--带导航点的viewpager布局-->
            <ImageView
                android:id="@+id/packageDetailImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_img"
                android:scaleType="fitCenter"
                />


            <LinearLayout
                android:id="@+id/packageNameLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/packageDetailImageView"
                android:background="@color/order_detail_green"
                android:paddingBottom="@dimen/padding_8dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_8dp">

                <TextView
                    android:id="@+id/packageNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="美国一日游"
                    />

                <TextView
                    android:id="@+id/flowTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="不限流量"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/packageNameLl"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/packageNameLl"
                android:layout_marginTop="15dp"
                />

            <RelativeLayout
                android:id="@+id/price_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/packageNameLl"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_10dp"
                >


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/price"
                    android:textColor="@color/contact_letter_gray_line"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/price"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:textColor="@color/order_detail_orange"
                    android:textSize="22.5sp"
                    tools:text="$15"
                    />

            </RelativeLayout>

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/price_rl"
                />

            <TextView
                android:id="@+id/featuresTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_rl"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_marginTop="10dp"
                android:text="@string/product_characteristics"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/featuresTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/featuresTitleTextView"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_10dp"
                android:textColor="@color/color_2d2d2d"
                android:textSize="12sp"
                />
            <!--android:layout_below="@id/how_to_use_tv"-->
            <TextView
                android:id="@+id/detailTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/featuresTextView"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_marginTop="10dp"
                android:text="@string/package_detail"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/detailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailTitleTextView"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_10dp"
                android:textColor="@color/color_2d2d2d"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/paymenTermTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailTextView"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_marginTop="10dp"
                android:text="@string/payment_term"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/payment_term_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/paymenTermTextView"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_10dp"
                android:textColor="@color/color_2d2d2d"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/howToUseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_term_text"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_marginTop="10dp"
                android:text="@string/how_to_use"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/how_to_use_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/howToUseTextView"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_10dp"
                android:textColor="@color/color_2d2d2d"
                android:textSize="12sp"
                />





            <View
                style="@style/horizontal_line_view"
                android:layout_above="@id/featuresTextView"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/featuresTextView"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_above="@id/payment_term_text"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/payment_term_text"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_above="@id/how_to_use_tv"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/how_to_use_tv"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_above="@id/detailTextView"
                />

            <View
                style="@style/horizontal_line_view"
                android:layout_below="@id/detailTextView"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/how_to_use_tv"/>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buyPackageButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_15dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:background="@drawable/circle_green_ret"
        android:text="@string/click_buy"
        android:textColor="@android:color/white"
        android:textSize="16dp"/>
</RelativeLayout>