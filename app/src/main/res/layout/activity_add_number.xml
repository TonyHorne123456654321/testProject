<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="75dp"
        android:paddingRight="15dp"

        android:layout_height="44dp"
        android:inputType="phone"
        android:hint="@string/input_phone"
        android:textSize="15sp"/>
    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:text="+86|"
        />

    <TextView
        android:id="@+id/line1"
        android:layout_below="@id/phoneNumberEdit"
        style="@style/horizontal_line_view"
        />



    <EditText
        android:id="@+id/verification_edit"
        android:layout_below="@id/line1"
        android:paddingLeft="75dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:hint="@string/input_verification"
        android:inputType="number"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/line1"
        android:background="@drawable/send_sms_selector"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="@android:color/black"
        android:textSize="12dp"/>
    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/line1"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:text="@string/verification_code"
        />
    <TextView
        android:id="@+id/line2"
        android:layout_below="@id/verification_edit"
        style="@style/horizontal_line_view"
        />
    <Button
        android:id="@+id/add_btn"

        android:layout_width="match_parent"
        android:layout_below="@id/line2"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/regist_btn"
        android:text="@string/add"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</RelativeLayout>