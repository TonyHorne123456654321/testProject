<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/contact_header"
            android:layout_width="@dimen/padding_35dp"
            android:layout_height="@dimen/padding_35dp"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginBottom="@dimen/padding_20dp"
            />
        <TextView
            android:layout_toRightOf="@id/contact_header"
            android:id="@+id/contact_name"
            android:paddingLeft="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5dp"
            android:layout_marginTop="@dimen/padding_25dp"
            android:layout_marginBottom="@dimen/padding_20dp"
            />

        <View
            android:id="@+id/line"
            android:layout_below="@id/contact_header"
            style="@style/horizontal_line_view"/>
        <LinearLayout
            android:layout_below="@id/line"
            android:id="@+id/ll_phone_info"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        </LinearLayout>
        <TextView
            android:id="@+id/delete_phone"
            android:layout_below="@id/ll_phone_info"
            android:layout_width="match_parent"
            android:textColor="@color/phone_number_color"
            android:layout_height="@dimen/padding_40dp"
            android:paddingLeft="@dimen/padding_15dp"
            android:text="@string/delete_contact"
            android:gravity="center_vertical"/>
        <View
            android:layout_below="@id/delete_phone"
            android:layout_marginBottom="@dimen/padding_10dp"
            style="@style/horizontal_line_view"/>

    </RelativeLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/show_cell_phone_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cell_phone_background"
        android:gravity="bottom"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/cell_phone_linearlayout"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingRight="@dimen/padding_15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/network_phone_tv"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_15dp"
                android:layout_marginBottom="@dimen/padding_15dp"
                android:textSize="@dimen/little_18"
                android:text="@string/network_phone"
                android:textColor="@color/white"
                android:background="@drawable/circle_network_phone_ret"
                android:gravity="center"
                android:layout_height="@dimen/padding_50dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/sim_register_phone"
                android:id="@+id/sim_register_phone_tv"
                android:gravity="center"
                android:textSize="@dimen/little_18"
                android:textColor="@color/white"
                android:background="@drawable/circle_sim_phone_ret"
                android:layout_marginBottom="@dimen/padding_15dp"
                android:layout_height="@dimen/padding_50dp" />
            <TextView
                android:id="@+id/cancel_phone"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/padding_15dp"
                android:text="@string/cancel"
                android:textSize="@dimen/little_18"
                android:textColor="@color/black"
                android:background="@drawable/circle_phone_cancel_ret"
                android:gravity="center"
                android:layout_height="@dimen/padding_50dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>