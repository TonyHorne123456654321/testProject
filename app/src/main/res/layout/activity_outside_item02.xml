<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number_2"
        android:layout_width="@dimen/padding_20dp"
        android:layout_marginTop="@dimen/padding_22dp"
        android:background="@drawable/circle_light_blue_ret"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:layout_height="@dimen/padding_20dp"/>



    <TextView
        android:layout_toRightOf="@id/number_2"
        android:id="@+id/outside_step_second_tv"
        android:layout_marginTop="@dimen/padding_20dp"
        android:paddingLeft="@dimen/padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/little_18"
        android:textColor="@color/color_333333"

        android:text="@string/outside_step_second"
        />

    <TextView
        android:id="@+id/outside_step_second_content_tv"
        android:layout_below="@id/outside_step_second_tv"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_width="wrap_content"
        android:textColor="@color/color_333333"
        android:paddingTop="@dimen/padding"
        android:paddingLeft="@dimen/padding_15dp"
        android:layout_height="wrap_content"
        android:text="@string/outside_step_second_content"
        />

    <ImageView
        android:id="@+id/outside_item02_iv"
        android:layout_marginTop="@dimen/padding_50dp"
        android:layout_below="@id/outside_step_second_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/outside_item02"/>


    <Button
        android:id="@+id/outside_step_second_bt"
        android:layout_below="@id/outside_item02_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_marginTop="@dimen/padding_50dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:background="@drawable/green_btn_click"
        android:text="@string/outside_step_second_click"
        android:textColor="@android:color/white"
        android:textSize="@dimen/little_16"/>

    <Button
        android:id="@+id/activateTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:layout_below="@id/outside_step_second_bt"
        android:layout_marginTop="@dimen/padding_15dp"
        android:background="@drawable/green_btn_click"
        android:text="@string/complete_next"
        android:textColor="@android:color/white"
        android:textSize="@dimen/little_16"/>

</RelativeLayout>