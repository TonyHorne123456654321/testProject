<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aixiaoqi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_30dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10dp"
        android:id="@+id/tag"/>
    <RelativeLayout
        android:id="@+id/click_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_phone_selector"
        android:orientation="vertical"
        >
    <de.blinkt.openvpn.views.RoundImageView
        android:layout_below="@id/line"
        android:id="@+id/headImageView"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_width="@dimen/padding_30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/padding_5dp"
        android:layout_marginBottom="@dimen/padding_5dp"
        aixiaoqi:type="circle"
        android:layout_height="@dimen/padding_30dp"/>

    <TextView
        android:layout_below="@id/line"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4dp"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/headImageView"
        android:maxLines="1"
        android:text="你好"
        android:id="@+id/nameTextView"/>
    <View
        android:id="@+id/line"
        style="@style/horizontal_line_view"
        />
        </RelativeLayout>
</LinearLayout>