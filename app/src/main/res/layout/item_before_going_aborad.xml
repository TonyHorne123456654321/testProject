<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/call_phone_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/countryImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/sport_step"
            />

        <TextView
            android:id="@+id/packageNameTextView"
            android:layout_toRightOf="@id/countryImageView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="美国一日游"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_toRightOf="@id/packageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20$"
            android:textColor="@color/order_money"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/un_effective"
            android:text="已激活"
            android:textColor="@color/order_item"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_below="@id/packageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_toRightOf="@id/countryImageView"
            android:layout_marginTop="-3dp"
            android:text="有效期：2016-08-01至2016-12-12"
            android:textColor="@color/order_item"
            android:textSize="11sp"
            />

    </RelativeLayout>

