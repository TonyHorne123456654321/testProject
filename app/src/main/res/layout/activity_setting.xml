<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/contactUsTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/call_phone_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:text="@string/contact_us"/>


    <View
        style="@style/horizontal_line_view"
        />

    <TextView
        android:id="@+id/userFeedbackTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:background="@drawable/call_phone_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:text="@string/user_feedback"/>


    <View
        style="@style/horizontal_line_view"
        />

    <TextView
        android:id="@+id/agreementUsTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/call_phone_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:text="@string/agreement"/>


    <View
        style="@style/horizontal_line_view"
        />

    <LinearLayout
        android:id="@+id/ll_upgrade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:background="@drawable/call_phone_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/app_version"/>

        <TextView
            android:id="@+id/appVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.01"
            android:textColor="@color/app_version"
            android:textSize="15dp"
            />
    </LinearLayout>

    <View
        style="@style/horizontal_line_view"
        />


    <Button
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:layout_marginTop="@dimen/padding_15dp"
        android:background="@drawable/green_btn_click"
        android:text="@string/exit"
        android:textColor="@android:color/white"
        android:textSize="16dp"/>
</LinearLayout>
