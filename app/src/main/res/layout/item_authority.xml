<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/choice_key_type_click"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/number1" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/padding_60dp"
        android:layout_toEndOf="@+id/iv_01"
        android:lines="1"
        android:maxLength="10"
        android:textSize="@dimen/little_16"
        tools:text="This is Title" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginLeft="@dimen/padding_60dp"
        android:layout_toRightOf="@+id/iv_01"
        android:textColor="@color/gray_text"
        tools:text="This is Tip" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="80dp"
        android:layout_height="@dimen/padding_40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/authority_ret"
        android:gravity="center"
        android:text="@string/set_now"
        android:textColor="@color/white"
        android:textSize="@dimen/little_12" />
</RelativeLayout>