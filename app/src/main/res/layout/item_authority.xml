<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rootRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/choice_key_type_click"
                android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingTop="15dp"
        android:textSize="@dimen/little_16"
        tools:text="This is Title"
        />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:paddingLeft="@dimen/padding_15dp"
        android:textColor="@color/gray_text"
        tools:text="This is Tip"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="@dimen/padding_40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_btn"
        android:text="@string/set_now"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/little_12"
        />
</RelativeLayout>