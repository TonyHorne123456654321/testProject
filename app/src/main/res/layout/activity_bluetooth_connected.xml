<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connectedRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_title"
    android:visibility="gone"
    >
    <TextView
        android:id="@+id/search_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/searching_wrist_strap"
        android:textColor="@color/white"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tip_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bluetooth"
        android:layout_centerHorizontal="true"
        android:text="@string/please_close_to_the_phone"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/connectedImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/bluetooth_success"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectedImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_15dp"
        android:text="@string/bind_seccess"
        android:textColor="@color/white"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_device_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>