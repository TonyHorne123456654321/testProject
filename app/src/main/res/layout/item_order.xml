<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_100dp"
    android:layout_marginTop="@dimen/padding_10dp"
    android:layout_gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/call_phone_selector"
    >

    <ImageView
        android:id="@+id/countryImageView"
        android:layout_width="@dimen/padding_64dp"
        android:layout_height="@dimen/padding_64dp"
        android:layout_centerVertical="true"
        android:background="@drawable/sport_step"
        />

    <TextView
        android:id="@+id/packageNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18dp"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_toRightOf="@id/countryImageView"
        android:layout_marginLeft="@dimen/padding_8dp"
        android:text="美国一日游"
        android:textSize="15sp"
        />



    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="已激活"
        android:padding="@dimen/padding_5dp"
        android:background="@drawable/circle_light_gray_blue_bord_selector"
        android:textColor="@drawable/blue_btn_click_color_selecor"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageNameTextView"
        android:layout_toRightOf="@id/countryImageView"
        android:text="有效期：2016-08-01至2016-12-12"
        android:textColor="@color/order_item"
        android:layout_marginLeft="@dimen/padding_8dp"
        android:textSize="11sp"
        />
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20$"
        android:layout_marginLeft="@dimen/padding_8dp"
        android:layout_below="@id/dateTextView"
        android:layout_toRightOf="@id/countryImageView"
        android:textColor="@color/order_money"
        android:textStyle="bold"
        />

</RelativeLayout>


