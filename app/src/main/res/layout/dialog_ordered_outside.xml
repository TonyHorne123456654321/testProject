<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cancel_dialog"
        android:layout_width="@dimen/padding_25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/un_effective"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/padding_5dp"
        android:layout_height="@dimen/padding_25dp" />
<TextView
    android:id="@+id/user_intro"
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/padding_10dp"
    android:text="@string/user_intro"
    android:layout_height="wrap_content" />
<TextView
    android:layout_below="@+id/user_intro"
    android:id="@+id/user_intro_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/padding_10dp"
    android:layout_marginRight="@dimen/padding_15dp"
    android:layout_marginLeft="@dimen/padding_15dp"
    android:layout_height="wrap_content"
    android:text="@string/user_intro_content"
    />
<TextView
    android:layout_below="@+id/user_intro_content"
    android:id="@+id/know_not_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_10dp"
    android:paddingBottom="@dimen/padding_10dp"
android:gravity="center_horizontal"
    android:textColor="@color/aggreement"
    android:text="@string/know_not_tip"/>
</RelativeLayout>