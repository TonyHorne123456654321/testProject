<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/aixiaoqi1RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_phone_selector"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:paddingTop="@dimen/padding_10">

        <TextView
            android:id="@+id/aixiaoqiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aixiaoqi_bracelet"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow"
            />
    </RelativeLayout>

    <View
        android:id="@+id/aixiaoqi1Line"
        style="@style/horizontal_line_view"
        android:layout_below="@id/aixiaoqi1RelativeLayout"/>

    <RelativeLayout
        android:id="@+id/uniboxRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aixiaoqi1Line"
        android:background="@drawable/call_phone_selector"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:paddingTop="@dimen/padding_10">

        <TextView
            android:id="@+id/uniboxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unibox"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow"
            />
    </RelativeLayout>

    <View
        android:id="@+id/uniboxLine"
        style="@style/horizontal_line_view"
        android:layout_below="@id/uniboxRelativeLayout"/>
</RelativeLayout>
