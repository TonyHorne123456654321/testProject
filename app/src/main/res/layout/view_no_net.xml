<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/NoNetRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/no_net_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_4dp"
        android:background="@drawable/no_net"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/retryTextView"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/no_net_tv"
        android:layout_below="@id/no_net_iv"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="@string/no_net"
        android:textColor="@color/gray_text"
        />

    <TextView
        android:id="@+id/retryTextView"
        android:layout_width="wrap_content"
        android:layout_below="@id/no_net_iv"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_toRightOf="@id/no_net_tv"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:textColor="@color/connect_us_blue"
        />

</RelativeLayout>