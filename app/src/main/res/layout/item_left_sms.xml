<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/show_time_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/readed"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/left_content_tv"
        android:layout_width="wrap_content"
        android:layout_below="@id/show_time_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_50dp"
        android:background="@drawable/left_sms"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
</RelativeLayout>
